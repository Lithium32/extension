{
  "name": "chrome-extension-monitor",
  "description": "Chrome Extension for API Error Monitoring",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "popup.html",
    "default_icon": "./image/icon.png"
  },
  "permissions": [
    "storage",
    "webRequest",
    "notifications",
    "activeTab",
    "downloads"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "content_scripts": [
    {
      "js": [
        "content.js"
      ],
      "matches": [
        "http://kdtx-test.itheima.net/*",
        "https://item.jd.com/*"
      ],
      "run_at": "document_start",
      "world": "MAIN",
      "type":"module",
      "all_frames": true
    },
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "bridge.js"
      ],
      "run_at": "document_start",
      "world": "ISOLATED" //隔离世界
    }
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module" // 启用 ES6 模块支持
  }
}